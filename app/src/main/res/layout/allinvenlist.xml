<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="65dp">

    <ImageView
        android:layout_marginRight="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/webtoonimg1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/invenImageView1"
        />

        <TextView
            android:layout_toRightOf="@id/invenImageView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"
            android:id="@+id/invenTextView1"
            android:textSize="15dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_below="@id/invenTextView1"
            android:layout_toRightOf="@id/invenImageView1"
            android:id="@+id/invenDate"
            android:text="설명"
            android:textSize="10dp"
            android:textColor="#666666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
<ImageButton
    android:background="#00ff0000"
    android:id="@+id/alterbtn"
    android:onClick="IOnClick"
    android:layout_centerInParent="true"
    android:layout_alignParentRight="true"
    android:src="@drawable/ic_add_alert_black_24dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />


</RelativeLayout>
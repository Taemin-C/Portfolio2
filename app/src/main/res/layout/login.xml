<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="5dp"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#606263"
        android:textStyle="bold"
        android:text="LOGIN"
        android:gravity="center"
        android:textSize="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/editId"
            android:hint="ID를 입력하세요."
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/editPass"
            android:inputType="textPassword"
            android:layout_below="@id/editId"
            android:hint="PassWord를 입력하세요."
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="15dp"
            android:layout_below="@id/editPass"
            android:id="@+id/lossId"
            android:textColor="#606263"
            android:textStyle="italic"
            android:background="#00ff0000"
            android:text="아이디/비밀번호 찾기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="LOnClick"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/editPass"
            android:layout_toRightOf="@id/lossId"
            android:id="@+id/backhome"
            android:textColor="#606263"
            android:textStyle="italic"
            android:background="#00ff0000"
            android:text="홈으로"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="LOnClick"
            android:layout_marginLeft="5dp"
            android:id="@+id/loginbtn"
            android:layout_alignParentRight="true"
            android:text="Login"
            android:textSize="25dp"
            android:textColor="#606263"
            android:textStyle="bold"
            android:background="@drawable/ic_lock_black_24dp"
            android:layout_width="100dp"
            android:layout_height="90dp" />
        <Button
            android:textColor="#606263"
            android:textStyle="italic"
            android:background="#00ff0000"
            android:layout_below="@id/loginbtn"
            android:layout_toRightOf="@id/backhome"
            android:onClick="LOnClick"
            android:id="@+id/signupbtn"
            android:text="회원가입"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>



</LinearLayout>
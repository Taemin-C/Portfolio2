<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:visibility="visible"
    android:id="@+id/page2_Webtoon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/banner"
        android:scaleType="fitXY"
        android:src="@drawable/oribanner"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <LinearLayout

        android:layout_below="@+id/banner"
        android:id="@+id/dayofweek"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <Button
            android:onClick="mOnClick"
            android:id="@+id/btnmon"
            android:background="#949494"
            android:text="월"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="mOnClick"
            android:id="@+id/btntue"
            android:background="#00ff0000"
            android:text="화"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="mOnClick"
            android:id="@+id/btnwed"
            android:background="#00ff0000"
            android:text="수"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="mOnClick"
            android:id="@+id/btnthu"
            android:background="#00ff0000"
            android:text="목"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnfri"
            android:onClick="mOnClick"
            android:background="#00ff0000"
            android:text="금"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnsat"
            android:onClick="mOnClick"
            android:background="#00ff0000"
            android:text="토"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnsun"
            android:onClick="mOnClick"
            android:background="#00ff0000"
            android:text="일"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btnallweek"
            android:onClick="mOnClick"
            android:background="#00ff0000"
            android:text="전체"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <FrameLayout
        android:layout_below="@+id/dayofweek"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/monday"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:padding="5dp"
                android:id="@+id/listview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>

        </LinearLayout>


    </FrameLayout>


</RelativeLayout>


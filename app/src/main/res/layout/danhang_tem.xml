<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<RelativeLayout
    android:background="#ffffff"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dTem_img"
        android:src="@drawable/danhang1"
        android:layout_alignParentLeft="true"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:id="@+id/dwriter"
        android:text="저자 : 박새날"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/dTem_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="@string/special_char1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/dwriter"
        android:id="@+id/inc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ddate"
        android:text="발간일 : 2019.08.21"
        android:layout_toRightOf="@id/dTem_img"
        android:layout_below="@id/dwriter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dpage"
        android:text="페이지 324p"
        android:layout_toRightOf="@id/dTem_img"
        android:layout_below="@id/ddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/isbn"
        android:text="ISBN 97889280999948"
        android:layout_toRightOf="@id/dTem_img"
        android:layout_below="@id/dpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/dbook"
        android:layout_marginTop="10dp"
        android:text="도서"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_back"
        android:layout_toRightOf="@id/dTem_img"
        android:layout_below="@id/isbn"
        android:layout_width="50dp"
        android:layout_height="30dp" />
    <TextView
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:text="8000원"
        android:layout_below="@id/isbn"
        android:layout_toRightOf="@id/dbook"
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/base1"
        android:layout_below="@id/dTem_img"
        android:background="#d9d9d9"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/base1"
        android:text="책소개"
        android:textSize="15dp"
        android:id="@+id/base2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/bookexp"
        android:layout_below="@id/base2"
        android:text="@string/tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginTop="5dp"
        android:id="@+id/base3"
        android:layout_below="@id/bookexp"
        android:background="#d9d9d9"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <TextView
        android:textStyle="bold"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/base3"
        android:text="목차"
        android:textSize="15dp"
        android:id="@+id/base4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/chapter"
        android:layout_below="@id/base4"
        android:text="@string/temchapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="구매하기"
        android:layout_below="@id/chapter"
        android:background="@drawable/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>


</ScrollView>